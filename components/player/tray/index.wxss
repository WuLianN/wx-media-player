.player-tray {
  position: relative;
  width: 100vw;
  height: 70vh;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  /* background: red; */
}

.player-record {
  width: 77vw;
  height: 72vw;
  margin: 15vw;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
}

.player-record-bg {
  width: 77vw;
  height: 72vw;
}

.player-img {
  width: 41vw;
  height: 41vw;
  border-radius: 50%;
  position: absolute;
  top: 29vw;
  z-index: 100;
}

.user-function {
  width: 70vw;
  height: 8vh;
  margin: 0 auto;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  top: 71vh;
}

.user-function-icon {
  width: 8vw;
  height: 5vh;
}

.user-img {
  width: 100%;
  height: 100%;
}
