.player {
  width: 100vw;
  height: 100vh;
  background: rgb(110, 108, 108);
  z-index: 300;
  position: fixed;
  top: 0;
  left: 0;
}

/* 导航 */

.player-nav {
  width: 100vw;
  height: 10vh;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  /* border: 1px solid red; */
  position: relative;
}

.player-nav-arrow {
  width: 10vw;
  height: 8vh;
  position: relative;
  left: 3vw;
}

.player-nav-arrowImg {
  width: 100%;
  height: 100%;
}

.player-nav-song {
  width: 70vw;
  height: 10vh;
  position: relative;
  left: 5vw;
}

.player-song-name {
  color: white;
  font-size: 2.5vh;
  position: absolute;
  top: 1.5vh;
}

.player-song-artist {
  color: rgba(255, 255, 255, 0.589);
  font-size: 2vh;
  position: absolute;
  bottom: 1.5vh;
}










.player-bg {
  width: 100vw;
  height: 100vh;
  z-index: -10;
  -webkit-filter: blur(50px);
  filter: blur(50px);
  position: absolute;
  top: 0;
  left: 0;
}
