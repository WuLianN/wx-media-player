.player {
  width: 100vw;
  height: 16vw;
  display: flex;
  flex-flow: row nowrap;
  border-top: 1px solid rgba(209, 194, 194, 0.801);
  background: white;
  position: fixed;
  bottom: 0;
  z-index: 100;
}

.player-detail {
  display: flex;
  flex-flow: row nowrap;
}

.song-pic {
  width: 14vw;
  height: 14vw;
  margin: 1vw 0 0 2vw;
}

.song-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.song-info {
  width: 50vw;
  height: 16vw;
  position: relative;
  text-indent: 3vw;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.song-name {
  position: absolute;
  top: 2vw;
  font-size: 32rpx;
}

.song-artist {
  position: absolute;
  bottom: 2vw;
  font-size: 24rpx;
  color: gray;
}

.song-player {
  width: 14vw;
  height: 14vw;
  margin: 1vw 2vw 0 0;
}

.song-player-img {
  position: relative;
  width: 100%;
  height: 100%;
}
