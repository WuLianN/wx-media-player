.header {
  width: 100vw;
  height: 7vh;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  background: red;
}

.header-arrow {
  width: 10vw;
  height: 7vh;
  position: relative;
  left: 3vw;
  display: flex;
  align-items: center;
  justify-content: center;
}

.img {
  position: relative;
  width: 10vw;
  height: 7vh;
}

.headerTitle {
  width: 60vw;
  height: 7vh;
  line-height: 7vh;
  margin: 0 0 0 5vw;
  font-weight: bold;
  font-size: 3vh;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.changeClass {
  font-size: 2vh;
  color: white;
  font-weight: 100;
}

.changeImgSize {
  position: relative;
  width: 60%;
  height: 70%;
}