.nav {
  width: 90vw;
  height: 10vh;
  margin: 0 auto;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
}

.nav-title {
  width: 15vw;
  height: 10vh;
  display: table-cell;
  vertical-align: middle;
  text-align: center;
}

.nav-title img {
  width: 10vw;
  height: 6vh;
}

.nav-title-info {
  color: #9b9b9b;
  font-size: 2vh;
  text-align: center;
}